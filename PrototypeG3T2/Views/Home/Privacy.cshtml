@model List<Order>

@{
    ViewData["Title"] = "Orders";
}
<h1>@ViewData["Title"]</h1>




<div class="col-lg-6 col-md-6">
    <h2>All orders</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-inverse">
                <tr>
                    <th>Item Naam</th>
                    <th>Order ID</th>
                    <th>Status</th>
                    <th>Details</th>

                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i <= Model.Count - 1; ++i)
                {

                    <tr>
                        
                        <td>@Model[i].ItemNaam</td>
                        <td>@Model[i].OrderId</td>
                        <td>@Model[i].Status</td>
                        <td><a asp-area="" asp-controller="Home" asp-action="SensorData" asp-route-id="@Model[i].OrderId">details</a></td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
<div class="col-lg-6 col-md-6">
    <canvas width="400" height="320" id="myChart"></canvas>
</div>

    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

        <script type="text/javascript">
            var ctx = document.getElementById('myChart').getContext('2d');
            var chart = new Chart(ctx, {
                // The type of chart we want to create
                type: 'line',

                // The data for our dataset
                data: {
                    labels: ['January', 'Februari'],
                    datasets: [{
                        label: 'Helikopter vleugel',

                        borderColor: 'rgb(255, 99, 132)',
                        data: [0, 1]
                    }, {
                        label: 'Hockeystick',

                        borderColor: '#4286f4',
                        data: [0, 6]
                    }, {
                        label: 'Composiet',

                        borderColor: '#41f495',
                        data: [1, 2]
                    }]

                },

                // Configuration options go here
                options: {}
            });
        </script>
    }
